{% extends 'base.j2' %} 

{% block head %}
    <title>View Your Board</title>
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/board.css') }}">
{% endblock head %} 

{% block body %} 
    <div class="content">

        <h1>{{ name }} </h1>
    	<a href="/"> <input class="back" type="button"  value="Back"> </a>
            <div class ="name-bingo-container">                

                <table align="center">
		    <tr>
		        {% for i in range(5) %}
				<td class="reward"></td>
			{% endfor %}
			<td title="{{rewards[0]}}" class="reward"> <img src="{{ url_for('static', filename='resources/gift.jpg') }}"> </td>
		    </tr>
                    {% for i in range(25) %}
                        {% if i % 5 == 0 %}
                            <tr>
                        {% endif %}

                        	<td title= "{{goals[i] }}" ><img src="{{ url_for('static', filename='resources/x.png') }}"></td>

                        {% if i % 5 == 4 %}
			  {% if i == 24 %}
			    <td title="{{rewards[5]}}" class = "reward"><img src="{{ url_for('static', filename='resources/gift.jpg') }}"></td>
                            </tr>
			  {% else %}
			    <td title="{{rewards[(i%4)+1]}}" class = "reward"><img src="{{ url_for('static', filename='resources/gift.jpg') }}"></td>
                            </tr>
			  {% endif %}
                        {% endif %}
                    {% endfor %}
		    <tr class = "reward"> 
			{% for i in range(5) %}
				<td title="{{rewards[i+7]}}" class="reward"><img src="{{ url_for('static', filename='resources/gift.jpg') }}"></td>
			{% endfor %}
		        <td title="{{rewards[6]}}" class="reward"><img src="{{ url_for('static', filename='resources/gift.jpg') }}"></td>
		   </tr>
                </table>

            </div>

    </div>
{% endblock body %}
