{% extends 'base.j2' %} 

{% block head %}
    <title>Bytes | View Profile</title>
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/view_profile.css') }}" />
{% endblock head %}

{% block body %}
	<div class="main-content">
		<div class="topHeader" id="header">
			<div class="logout-button">
				<input
					type="button"
					class="button"
					name="logout-btn"
					id="logout-btn"
					onclick="location.href='/logout';"
					value="Logout" />
		    </div>

		    <div class="edit-gb-btn">
				<input
					type="button"
					class="button"
					name="edit-gb-btn"
					id="edit-gb-btn"
					onclick="location.href='/board';"
					value="Edit Bingo Board" />
		    </div>
		    <div class="edit-prof-btn">
		    	<input 
					type="button"
					class="button"
					name="edit-prof-btn" 
					id="edit-prof-btn" 
					onclick="location.href='/profile/edit';" 
					value="Edit Profile" />
			</div>
		</div>

		<div class="restaurant-profile">
			<div class="top-bar" id="top-bar">
			    <div>
					<h1 name="restaurant-name">
						{% if restaurant_name %}
							{{ restaurant_name }}
						{% else %}
							Restaurant Name
						{% endif %}
					</h1>
						<h4 name="address" class="clickable-contact"> 
							{% if address and city and province and postal_code %}
								<a href=" http://maps.google.com/?q= {{ address }} {{ city }} {{ province }} {{ postal_code }}" target="_blank">
									{{ address }}
									<br>
									{{ city }}, {{ province }}
									<br>
									{{ postal_code }}
								</a>
							{% else %}
								Please enter your address in by clicking Edit Profile.
							{% endif %}	
						</h4>
						<h4 name="phone-no" class="clickable-contact"> 
							{% if phone_number %}
								<a href="tel:{{ phone_number }}" target="_blank">
									{{ phone_number }}
								</a>
							{% else %}
								Phone Number
							{% endif %}
						</h4>
				</div>
				<div class="top-right-box">
					<div class="categories">
						<h4>
						{% if category %}
							{{ category }}
						{% else %}
							<div>
								Category
							</div>
						{% endif %}
						</h4>
					</div>
				</div>
			</div>
			<div class="big-content">
				<img
					src=
					{% if rest_img %}
							"{{ rest_img }}"
					{% else %}
							"https://filestore.community.support.microsoft.com/api/images/72e3f188-79a1-465f-90ca-27262d769841"
					{% endif %}
					name="rest-img">
				<div class="description">
					<p>
						{% if description %}
							{{ description }}
						{% else %}
							Description
						{% endif %}
					</p>
				</div>
			</div>
		</div>
	</div>

	<script src="{{ url_for('static', filename='js/sticky-header.js') }}"></script>

{% endblock body %}