{% extends 'base.j2' %} 

{% block head %}
    <title>Bytes | QR Validator</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" />
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/qr-verification.css') }}" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://rawgit.com/sitepoint-editors/jsqrcode/master/src/qr_packed.js"></script>
{% endblock head %}

{% block body %}
    <div class="container">
        <button id="back" onclick=window.location.href="/"><i class="fas fa-long-arrow-alt-left"></i></button>
        <h1>QR Validator</h1>

        <div class="instructions">
            Click the Qr code below to activate camera and start scanning!<br><br>
            Once a code is scanned, you can scan again or verify for completion.<br><br>
            You may even manually enter a code if you wish in the input box below.
        </div>

        <a id="btn-scan-qr">
            <img src="https://dab1nmslvvntp.cloudfront.net/wp-content/uploads/2017/07/1499401426qr_icon.svg">
        </a>

        <canvas hidden="" id="qr-canvas"></canvas>
        <form action="">
                <input 
                    type="text"
                    placeholder="Enter Code Here"                             
                    required >
                    <button id="validate"><i class="fas fa-arrow-right"></i></button>
        </form>
    </div>
    <div id="accept-modal">
        <div>
            <div class="info text"></div>
            <div class="data text"></div>
        </div>
        <div class="button-container">
            <button id="decline">Decline</button>
            <button id="accept">Accept</button>
        </div>
    </div>

    <div id="notification-modal">
        <div>
            <div class="info text"></div>
        </div>
        <div class="button-container">
            <button id="continue">Continue</button>
        </div>
    </div>
    <script src="{{ url_for('static', filename='js/qrCodeScanner.js') }}" ></script>
{% endblock body %}
